@model Bibliomat.WebApp.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    @{
        if (!string.IsNullOrWhiteSpace(@Model.ErrorMessage))
        {
            <p id="ErrorMessage" class="ErrorMessage">@Model.ErrorMessage</p>
        }
    }

    <h1 class="display-4 mb-3 mt-4">Register</h1>

    <form method="post" asp-action="DoRegister">
        <div class="form-row text-center">
            <div class="form-group col-md-5"></div>
            <div class="form-group col-md-2">
                <label class="text-left col-md-12" for="txtName">Name:</label>
                <input class="col-md-12" id="txtName" type="text" asp-for="Name" required />
            </div>
        </div>
        <div class="form-row text-center">
            <div class="form-group col-md-5"></div>
            <div class="form-group col-md-2">
                <label class="text-left col-md-12" for="txtName">Password:</label>
                <input class="col-md-12" id="txtPass" type="password" asp-for="Pass" required />
            </div>
        </div>
        <div class="form-row text-center">
            <div class="form-group col-md-5"></div>
            <div class="form-group col-md-2">
                <button class="btn form-control mt-3" type="submit">Register</button>
            </div>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        $("#ErrorMessage").delay(3000).fadeOut(1500);
    });
</script>